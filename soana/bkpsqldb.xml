<?xml version="1.0" encoding="utf-8"?>
<Container>
<Name>BackupMySQLDatabase</Name>
<Description>
Cron backup of MySQL database.
Pleasae specify:
IP of the SQL server.
Cron parameters
</Description>
<Registry>https://registry.hub.docker.com/u/soana/bkpsqldb/</Registry>
<Repository>soana/bkpsqldb</Repository>
<BindTime>true</BindTime>
<Privileged>true</Privileged>

<Networking>
<Mode>bridge</Mode>
</Networking>

<Environment>
<Variable>
<Name>bkp-minute</Name>
<Value>0</Value>
</Variable>
<Variable>
<Name>bkp-hour</Name>
<Value>3</Value>
</Variable>
<Variable>
<Name>bkp-day-of-month</Name>
<Value>*</Value>
</Variable>
<Variable>
<Name>bkp-monh</Name>
<Value>*</Value>
</Variable>
<Variable>
<Name>bkp-day-of-week</Name>
<Value>*</Value>
</Variable>
<Variable>
<Name>MySQLIP</Name>
<Value>192.168.0.40</Value>
</Variable>
</Environment>

<Data>
<Volume>
<HostDir></HostDir>
<ContainerDir>/backup</ContainerDir>
<Mode>rw</Mode>
</Volume>
</Data>
<WebUI></WebUI>
<Banner>https://raw.githubusercontent.com/soana/bkpsqldb/master/banner.png</Banner>
<Icon>https://raw.githubusercontent.com/soana/bkpsqldb/master/icon.png</Icon>
</Container>
